generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model book{

  id String @id @default(uuid())
  titulo String @unique
  autor String 
  DataPublicacao String?
  categoria categoriaLivro?


}
enum categoriaLivro{
  ROMANCE
  SUSPENCE
  ACAO
  FANTASIA
  INFANTIL
  CORDEL

}